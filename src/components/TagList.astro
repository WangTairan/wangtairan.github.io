---
const { tags = [] } = Astro.props;
---

{tags.length > 0 && (
  <div class="tags">
    {tags.map(tag => (
      <span class="tag">{tag}</span>
    ))}
  </div>
)}

<style>
.tags {
  margin-top: 0.5rem;
  display: flex;
  flex-wrap: wrap;
  gap: 0.4rem;
}

.tag {
  background: #e0f7fa;
  color: #00796b;
  font-size: 0.75rem;
  padding: 0.25rem 0.5rem;
  border-radius: 6px;
  white-space: nowrap;
}
</style>
