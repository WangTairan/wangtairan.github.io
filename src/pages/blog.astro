---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import TagList from '../components/TagList.astro';

const posts = (await getCollection('blog')).sort((a, b) =>
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
);---

<Layout title="Blog">
  <section class="blog-list">
    <h2>Blog</h2>

    <input id="blog-search" class="search-box" placeholder="Search blogs..." />

    <div class="grid">
      {posts.map(post => (
        <div
          class="card"
          data-title={post.data.title.toLowerCase()}
          data-desc={post.data.description.toLowerCase()}
          data-tags={post.data.tags?.join(' ').toLowerCase()}
        >
          <a href={`/blog/${post.slug}`} class="card-link">
            <img
              src={post.data.cover ?? '/images/default-cover.png'}
              alt="cover"
              class="cover"
            />
            <h3>{post.data.title}</h3>
            <p class="description">{post.data.description}</p>
            <TagList tags={post.data.tags} />
          </a>
        </div>
      ))}
    </div>
  </section>

  <script src="/js/blog-search.js" defer></script>

  <style>
    .blog-list {
      padding: 2rem 4vw;
      max-width: 1200px;
      margin: auto;
    }

    .search-box {
      width: 100%;
      padding: 0.6rem 1rem;
      margin-bottom: 2rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 8px;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: transform 0.2s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card-link {
      display: block;
      text-decoration: none;
      color: inherit;
      padding: 1rem;
    }

    .cover {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-bottom: 1px solid #eee;
      border-radius: 12px 12px 0 0;
    }

    .card-link h3,
    .card-link p {
      margin: 0;
      margin-top: 1rem;
    }

    .card h3 {
      margin-top: 1rem;
      font-size: 1.2rem;
    }

    .description {
      color: #666;
      font-size: 0.95rem;
      margin-top: 0.5rem;

      display: -webkit-box;
      -webkit-line-clamp: 2;       /* 限制为 2 行 */
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      min-height: 2.6em;            /* 保持两行高度，即使内容不足 */
    }
  </style>
</Layout>
